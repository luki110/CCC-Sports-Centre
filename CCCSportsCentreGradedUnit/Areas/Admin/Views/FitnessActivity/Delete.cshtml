@model CCCSportsCentreGradedUnit.Models.ViewModels.FitnessActivityViewModel
@using CCCSportsCentreGradedUnit.Extensions



<br />
@if (TempData.ContainsKey("Alert"))
{
    <div class="alert alert-danger" role="alert">@TempData["Alert"]
        <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
    </div>

}
else if (TempData.ContainsKey("Success"))
{
    <div class="alert alert-success" role="alert">@TempData["Success"]
        <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
    </div>
}
<br />

<h2 class="text-info"> Delete Activity</h2>
<form method="post">
    <div class="p-4 border rounded">
        <input hidden asp-for="FitnessActivity.Id" />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="FitnessActivityCategories"></label>
            </div>
            <div class="col-5">
                <input asp-for="@Model.FitnessActivity.FitnessActivityCategory.Name" readonly class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="FitnessActivity.StartDate"></label>
            </div>
            <div class="col-5">
                <input asp-for="FitnessActivity.StartDate" readonly class="form-control" data-date-format="dd/mm/yyyy" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="FitnessActivity.StartTime"></label>
            </div>
            <div class="col-5">
                <input asp-for="FitnessActivity.StartTime" readonly class="form-control" data-date-format="HH:mm" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="FitnessActivity.EndTime"></label>
            </div>
            <div class="col-5">
                <input asp-for="FitnessActivity.EndTime" readonly class="form-control" data-date-format="HH:mm" />
            </div>
        </div>

        <div class="form-group row">
            <div class="col-2">
                <label asp-for="FitnessActivity.Duration"></label>
            </div>
            <div class="col-5">
                <input asp-for="FitnessActivity.Duration" readonly class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="FitnessActivity.Price"></label>
            </div>
            <div class="col-5">
                <input asp-for="FitnessActivity.Price" readonly class="form-control" />
            </div>
        </div>

        <div class="form-group row">
            <div class="col-2">
                <label asp-for="FitnessActivity.Available"></label>
            </div>
            <div class="col-5">
                <input asp-for="FitnessActivity.Available" disabled />
            </div>
        </div>

        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Rooms"></label>
            </div>
            <div class="col-5">
                <input asp-for="@Model.FitnessActivity.Room.Name" readonly class="form-control" />
            </div>
        </div>
        <br />
        <div class="form-group">
            <input type="submit" class="btn btn-danger" value="Delete" />
            <a asp-action="Index" class="btn btn-primary">Back to List</a>
        </div>
    </div>

</form>




