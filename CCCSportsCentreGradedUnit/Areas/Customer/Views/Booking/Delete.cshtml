@model CCCSportsCentreGradedUnit.Models.ViewModels.BookingDetailsViewModel

@{
    ViewData["Title"] = "Delete";
}

<br />
@if (TempData.ContainsKey("Alert"))
{
    <div class="alert alert-danger" role="alert">
        @TempData["Alert"]
        <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
    </div>

}
else if (TempData.ContainsKey("Success"))
{
    <div class="alert alert-success" role="alert">
        @TempData["Success"]
        <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
    </div>
}
<h2 class="text-info"> Details Booking</h2>
<form method="post">
    <div class="p-4 border rounded">
        <input hidden asp-for="Booking.Id" />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="col-6">
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Booking.Member.FirstName"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Booking.Member.FirstName" readonly class="form-control" />
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Booking.Member.LastName"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Booking.Member.LastName" readonly class="form-control" />
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Booking.Member.Email"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Booking.Member.Email" readonly class="form-control" />
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Booking.Member.PhoneNumber"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Booking.Member.PhoneNumber" readonly class="form-control" />
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Booking.BookingDate"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Booking.BookingDate" readonly class="form-control" />
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Booking.BookingTotal"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Booking.BookingTotal" readonly class="form-control" />
                </div>
            </div>
        </div>
        <div class="col-6">
            @* Partial view *@
            <partial name="~/Views/Shared/_BookingClassDetails.cshtml" model="Model.FitnessClasses" />
            <partial name="~/Views/Shared/_BookingActivityDetails.cshtml" model="Model.FitnessActivities" />
        </div>
        <br />
        <div class="form-group">
            <input type="submit" class="btn btn-danger" asp-route-id="@Model.Booking.Id" value="Delete" />
            <a asp-action="ViewUserBookings" class="btn btn-primary">Back to List</a>
        </div>

    </div>

</form>


