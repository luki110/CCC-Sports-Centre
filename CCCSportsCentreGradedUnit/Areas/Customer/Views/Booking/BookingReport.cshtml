@model IEnumerable<CCCSportsCentreGradedUnit.Models.Booking>
@{
    ViewData["Title"] = "BookingReport";
}

<h2>BookingReport</h2>
<br /> <br />

<div>
    <table class="table table-striped border">
        <tr class="table-info">
            <th>
                @Html.DisplayNameFor(m => m.Id)
            </th>
            <th>
                @Html.DisplayNameFor(m => m.Member.FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(m => m.Member.LastName)
            </th>
            <th>
                @Html.DisplayNameFor(m => m.BookingDate)
            </th>
            <th>
                @Html.DisplayNameFor(m => m.BookingTotal)
            </th>
            <th>
                @Html.DisplayNameFor(m => m.Member.Email)
            </th>
            <th>
                @Html.DisplayNameFor(m => m.Member.PhoneNumber)
            </th>
            <th></th>
            <th></th>

        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(m => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(m => item.Member.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(m => item.Member.LastName)
                </td>
                <td>
                    @Html.DisplayFor(m => item.BookingDate)
                </td>
                <td>
                    @Html.DisplayFor(m => item.BookingTotal)
                </td>
                <td>
                    @Html.DisplayFor(m => item.Member.Email)
                </td>
                <td>
                    @Html.DisplayFor(m => item.Member.PhoneNumber)
                </td>

            </tr>
        }
    </table>

</div>
